// Custom styles.
#heart {
    color: rgb(255, 113, 168);
    animation: heart ease-in-out 1.33s infinite;

    @keyframes heart {
        0%, 100% {
            transform: scale(1);
        }

        10%, 30% {
            transform: scale(.9);
        }

        20%, 40%, 60%, 80%, 50%, 70% {
            transform: scale(1.1);
        }
    }
}

.footer-inner {
    text-align: center;
}

.footer {
    font-size: 13px;
}

.posts-expand .post-title-link, .posts-expand .post-title {
    box-shadow: inset 0 -1px 0 rgba(0, 0, 0, 0);
    color: #212121;
    font-size: 24px;
}

.fa-calendar {
    // color: #64CEAA;
