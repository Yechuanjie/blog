.post-body p a, .post-copyright li a {
    border-bottom: none;
    border-bottom: 1px solid #0593d3;
    color: #0593d3;

    &:hover {
        border-bottom: none;
        border-bottom: 1px solid #fc6423;
        color: #fc6423;
    }
}

strong {
    display: inline-block;
    margin: auto 2px;
    padding-right: 5px;
    padding-left: 5px;
    border-radius: 3px;
    border-radius: 5px;
    background-color: #ffc0cb;
    box-shadow: .4px .5px .4px .4px #ddd;
    color: #555;
    word-wrap: break-word;
    font-size: 14px;
}

.post-button a {
    display: inline-block;
    padding: 0 20px;
    border: 2px solid #222;
    border-radius: 0;
    background: #222;
    color: #fff;
    text-decoration: none;
    font-size: 14px;
    line-height: 2;
    transition-delay: 0s;
    transition-timing-function: ease-in-out;
    transition-duration: .2s;
    transition-property: background-color;
}

.post-copyright {
    border-left: 4px solid #64CEAA;
    border-radius: 3px;
    background-color: #eef7fa;
}

.post-copyright li {
    margin-bottom: 5px;
    line-height: 28px;
}

blockquote {
    border-left: 4px solid #64CEAA;
    border-radius: 3px;
    background-color: #eef7fa;

    p {
        margin: 0;
    }
}

