// 友链页面样式
.friend-index.container {
    margin: 0 auto;
    min-height: 80vh;
    max-width: 750px;

    .friend-navigation {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
    }

    .card {
        display: flex;
        align-items: center;
        box-sizing: border-box;
        margin-bottom: 1.5rem;
        padding: 10px 20px;
        width: 320px;
        border: none;
        border-radius: 3px;
        font-size: 16px;
        line-height: 30px;
        cursor: pointer;
        transition-duration: .15s;

        &:hover {
            // background: #f7f7f7;
            background: #eef7fa;
            transform: scale(1.1);
        }

        img {
            margin: 0;
            margin-right: 15px;
            padding: 0;
            width: 60px;
            height: 60px;
            border: 0;
            border-radius: 2px;
        }

        .card-right {
            flex: 1;
            max-width 245px;
            .card-header {
                color: #f03838;
                text-decoration: none;
                font-weight: bold;
                font-style: normal;
                text-overflow: ellipsis;
                white-space: nowrap;
                overflow: hidden;
                &:hover {
                    color: #f03838;
                    text-decoration: none;
                }
            }

            .card-meta {
                overflow: hidden;
                margin: 0;
                color: #9e9e9e;
                text-overflow: ellipsis;
                white-space: nowrap;
                letter-spacing: 1.5px;
                font-size: 14px;
            }
        }
    }
}

@media (max-width: 768px) {
    .card {
        margin: 0 auto 1.6rem !important;
    }
}

